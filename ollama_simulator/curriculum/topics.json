{
  "stages": {
    "stage1": {
      "name": "Basic Vocabulary",
      "description": "First words and simple concepts",
      "difficulty": 1,
      "topics": [
        {
          "name": "Greetings",
          "concepts": ["hello", "hi", "goodbye", "bye"],
          "expected_responses": ["hello", "hi", "bye"]
        },
        {
          "name": "Colors",
          "concepts": ["red", "blue", "green", "yellow"],
          "expected_responses": ["red", "blue", "green", "yellow"]
        },
        {
