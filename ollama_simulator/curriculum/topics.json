        },
        {
          "name": "Numbers",
          "concepts": ["one", "two", "three", "count"],
          "expected_responses": ["one", "two", "three", "count"]
        },
        {
          "name": "Family",
          "concepts": ["mother", "father", "family", "love"],
          "expected_responses": ["mother", "father", "family", "love"]
        }
      ]
    },
    "stage2": {
      "name": "Simple Sentences",
      "description": "Basic sentence structure and self-expression",
      "difficulty": 2,
      "topics": [
        {
          "name": "I Am",
          "concepts": ["I am", "I'm", "self", "identity"],
          "expected_responses": ["I am", "I'm"]
        },
        {
          "name": "I Like",
          "concepts": ["I like", "preference", "enjoy", "favorite"],
          "expected_responses": ["I like", "favorite"]
        },
        {
          "name": "I Want",
          "concepts": ["I want", "desire", "need", "please"],
          "expected_responses": ["I want", "please"]
        },
        {
          "name": "I See",
          "concepts": ["I see", "look", "watch", "observe"],
          "expected_responses": ["I see", "look"]
        },
        {
          "name": "I Feel",
          "concepts": ["I feel", "happy", "sad", "emotions"],
          "expected_responses": ["I feel", "happy", "sad"]
        }
      ]
    },
    "stage3": {
      "name": "Questions",
      "description": "Learning to ask and answer questions",
      "difficulty": 3,
      "topics": [
        {
          "name": "What Questions",
          "concepts": ["what is", "what are", "asking about things"],
          "expected_responses": ["what is", "what"]
        },
        {
          "name": "Where Questions",
          "concepts": ["where is", "location", "place", "direction"],
          "expected_responses": ["where", "here", "there"]
        },
        {
          "name": "Who Questions",
          "concepts": ["who is", "people", "identity", "names"],
          "expected_responses": ["who", "person", "name"]
        },
        {
          "name": "Why Questions",
          "concepts": ["why", "reason", "because", "explanation"],
          "expected_responses": ["why", "because"]
        },
        {
          "name": "How Questions",
          "concepts": ["how", "method", "way", "process"],
          "expected_responses": ["how", "way"]
        }
      ]
    },
    "stage4": {
      "name": "Abstract Concepts",
      "description": "Understanding more complex and abstract ideas",
      "difficulty": 4,
      "topics": [
        {
          "name": "Time",
          "concepts": ["time", "now", "later", "before", "after"],
          "expected_responses": ["time", "now", "later"]
        },
        {
          "name": "Emotions",
          "concepts": ["feelings", "happy", "sad", "angry", "scared"],
          "expected_responses": ["feel", "happy", "sad"]
        },
        {
          "name": "Imagination",
          "concepts": ["imagine", "pretend", "story", "dream"],
          "expected_responses": ["imagine", "story", "dream"]
        },
        {
          "name": "Thinking",
          "concepts": ["think", "believe", "know", "understand"],
          "expected_responses": ["think", "know"]
        },
        {
          "name": "Learning",
          "concepts": ["learn", "teach", "remember", "forget"],
          "expected_responses": ["learn", "remember"]
        }
      ]
    },
    "stage5": {
      "name": "Advanced Communication",
      "description": "More complex communication and reasoning",
      "difficulty": 5,
      "topics": [
        {
          "name": "Opinions",
          "concepts": ["opinion", "think", "agree", "disagree"],
          "expected_responses": ["I think", "agree", "disagree"]
        },
        {
          "name": "Explanations",
          "concepts": ["explain", "because", "reason", "so"],
          "expected_responses": ["because", "reason"]
        },
        {
          "name": "Comparisons",
          "concepts": ["more", "less", "same", "different"],
          "expected_responses": ["more", "less", "same", "different"]
        },
        {
          "name": "Predictions",
          "concepts": ["will", "future", "predict", "guess"],
          "expected_responses": ["will", "future", "maybe"]
        },
        {
          "name": "Creativity",
          "concepts": ["create", "make", "new", "idea"],
          "expected_responses": ["create", "make", "idea"]
        }
      ]
    }
  },
